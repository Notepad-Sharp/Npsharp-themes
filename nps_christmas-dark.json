{
  "$schema": "vscode://schemas/color-theme",
  "name": "Natal_Noite_Minimalista",
  "type": "dark",

  "colors": {
    "editor.background": "#0A0F12",               
    "editor.foreground": "#E6F2FF",

    "editorCursor.foreground": "#A8D8FF",          
    "editor.selectionBackground": "#14301C",       
    "editor.inactiveSelectionBackground": "#0E2215",
    "editorLineNumber.foreground": "#2E3A40",
    "editorLineNumber.activeForeground": "#C7E8FF",

    "editorWhitespace.foreground": "#1A242A",

    "activityBar.background": "#0C1114",
    "activityBar.foreground": "#E6F2FF",
    "activityBarBadge.background": "#1F6B2C",       
    "activityBarBadge.foreground": "#FFFFFF",

    "sideBar.background": "#0C1114",
    "sideBar.foreground": "#E6F2FF",

    "statusBar.background": "#0B1013",
    "statusBar.foreground": "#A8D8FF",

    "tab.activeBackground": "#11181C",
    "tab.activeForeground": "#FFFFFF",
    "tab.inactiveBackground": "#080C0F",
    "tab.inactiveForeground": "#8FA8B5",
    "tab.border": "#00000000",
    "tab.activeBorder": "#1F6B2C",                

    "terminal.background": "#0A0F12",
    "terminal.foreground": "#E6F2FF",
    "terminalCursor.foreground": "#A8D8FF",

    "terminal.ansiBlack": "#0A0A0A",
    "terminal.ansiRed": "#C73737",         
    "terminal.ansiGreen": "#2E8B57",       
    "terminal.ansiYellow": "#D7DFA3",
    "terminal.ansiBlue": "#6FB8FF",        
    "terminal.ansiMagenta": "#C47FBF",
    "terminal.ansiCyan": "#8AE6E6",
    "terminal.ansiWhite": "#FFFFFF",

    "button.background": "#2E8B57",
    "button.foreground": "#FFFFFF",
    "button.hoverBackground": "#3EA76D"
  },

  "semanticHighlighting": true,

  "tokenColors": [
    { "scope": "comment", "settings": { "foreground": "#88A4B8", "fontStyle": "italic" } },

    { "scope": "keyword", "settings": { "foreground": "#FF4C4C" } },      
    { "scope": "string", "settings": { "foreground": "#C8F7FF" } },      
    { "scope": "number", "settings": { "foreground": "#A8D8FF" } },

    { "scope": "variable", "settings": { "foreground": "#FFFFFF" } },
    { "scope": "constant", "settings": { "foreground": "#FF4C4C" } },

    { "scope": "function", "settings": { "foreground": "#D0EFFF" } },
    { "scope": "type", "settings": { "foreground": "#7FE6A2" } },
    { "scope": "operator", "settings": { "foreground": "#FF4C4C" } },

    { "scope": "punctuation", "settings": { "foreground": "#AED6E6" } }
  ]
}

