{
  "$schema": "vscode://schemas/color-theme",
  "name": "Christmas-Light",
  "type": "light",

  "colors": {
    "editor.background": "#F4F9FF",
    "editor.foreground": "#0F1A20",

    "editorCursor.foreground": "#2baa1a",
    "editor.selectionBackground": "#CBE8D1",
    "editor.inactiveSelectionBackground": "#DCEFE2",
    "editorLineNumber.foreground": "#A7B8C4",
    "editorLineNumber.activeForeground": "#2A3C47",

    "editorWhitespace.foreground": "#D3DFEA",

    "activityBar.background": "#EEF5FB",
    "activityBar.foreground": "#0F1A20",
    "activityBarBadge.background": "#2E8B57",
    "activityBarBadge.foreground": "#FFFFFF",

    "sideBar.background": "#EEF5FB",
    "sideBar.foreground": "#0F1A20",

    "statusBar.background": "#E8F1F8",
    "statusBar.foreground": "#3eaa1a",

    "tab.activeBackground": "#FFFFFF",
    "tab.activeForeground": "#0F1A20",
    "tab.inactiveBackground": "#F0F4F7",
    "tab.inactiveForeground": "#6D7F8A",
    "tab.border": "#00000000",
    "tab.activeBorder": "#2E8B57",

    "terminal.background": "#F4F9FF",
    "terminal.foreground": "#0F1A20",
    "terminalCursor.foreground": "#37aa1a",

    "terminal.ansiBlack": "#334044",
    "terminal.ansiRed": "#C73737",
    "terminal.ansiGreen": "#2E8B57",
    "terminal.ansiYellow": "#A59E2A",
    "terminal.ansiBlue": "#377EB8",
    "terminal.ansiMagenta": "#B35FA7",
    "terminal.ansiCyan": "#3BA6A6",
    "terminal.ansiWhite": "#FFFFFF",

    "button.background": "#2E8B57",
    "button.foreground": "#FFFFFF",
    "button.hoverBackground": "#3EA76D"
  },

  "semanticHighlighting": true,

  "tokenColors": [
    { "scope": "comment", "settings": { "foreground": "#7C8E99", "fontStyle": "italic" } },

    { "scope": "keyword", "settings": { "foreground": "#C73737" } },
    { "scope": "string", "settings": { "foreground": "#1aaa54" } },
    { "scope": "number", "settings": { "foreground": "#1aaa54" } },

    { "scope": "variable", "settings": { "foreground": "#0F1A20" } },
    { "scope": "constant", "settings": { "foreground": "#C73737" } },

    { "scope": "function", "settings": { "foreground": "#2F4A56" } },
    { "scope": "type", "settings": { "foreground": "#2E8B57" } },
    { "scope": "operator", "settings": { "foreground": "#C73737" } },

    { "scope": "punctuation", "settings": { "foreground": "#4F6E7A" } }
  ]
}
