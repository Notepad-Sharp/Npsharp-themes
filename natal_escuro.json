{
  "$schema": "vscode://schemas/color-theme",
  "name": "Noite_Natalina_Minimal_Dark",
  "type": "dark",
  "description": "Tema natalino minimalista: escuro, profundo, detalhes sutis em vermelho e verde. Inspirado no Dark+ por√©m mais elegante.",

  "colors": {
    "editor.background": "#0A0A0A",
    "editor.foreground": "#EDEDED",
    "editorCursor.foreground": "#FFFFFF",
    "editor.selectionBackground": "#0D2A18AA",
    "editor.inactiveSelectionBackground": "#0D2A1833",
    "editorLineNumber.foreground": "#3A3A3A",
    "editorLineNumber.activeForeground": "#EDEDED",
    "editorIndentGuide.background": "#1A1A1A",
    "editorIndentGuide.activeBackground": "#2A2A2A",
    "editorBracketMatch.border": "#1F3A1F",
    "editorBracketMatch.background": "#0F1F0F55",

    "sideBar.background": "#0C0C0C",
    "sideBar.foreground": "#D8D8D8",

    "activityBar.background": "#0C0C0C",
    "activityBar.foreground": "#FFFFFF",

    "tab.activeBackground": "#111111",
    "tab.inactiveBackground": "#0A0A0A",
    "tab.activeForeground": "#FFFFFF",
    "tab.inactiveForeground": "#777777",

    "terminal.background": "#0A0A0A",
    "terminal.foreground": "#EAEAEA",

    "statusBar.background": "#0C0C0C",
    "statusBar.foreground": "#FFFFFF",

    "focusBorder": "#1D4D1D",
    "scrollbarSlider.background": "#22222255",
    "scrollbarSlider.hoverBackground": "#22222288",
    "scrollbarSlider.activeBackground": "#222222AA"
  },

  "semanticHighlighting": true,

  "tokenColors": [
    {
      "scope": ["comment"],
      "settings": {
        "foreground": "#B7B7B7",
        "fontStyle": "italic"
      }
    },
    {
      "scope": ["keyword", "storage.type", "storage.modifier"],
      "settings": {
        "foreground": "#D24C4C",
        "fontStyle": "bold"
      }
    },
    {
      "scope": ["variable", "identifier"],
      "settings": {
        "foreground": "#FFFFFF"
      }
    },
    {
      "scope": [
        "punctuation",
        "punctuation.definition.string",
        "punctuation.definition.parameters",
        "punctuation.section",
        "meta.brace",
        "meta.delimiter"
      ],
      "settings": {
        "foreground": "#4CAF50"
      }
    },
    {
      "scope": ["string"],
      "settings": {
        "foreground": "#5FEA82"
      }
    },
    {
      "scope": ["constant.numeric", "constant.language"],
      "settings": {
        "foreground": "#FFFFFF"
      }
    },
    {
      "scope": ["entity.name.function", "support.function"],
      "settings": {
        "foreground": "#D2FFD2"
      }
    },
    {
      "scope": ["entity.name.type", "support.class"],
      "settings": {
        "foreground": "#DDC48C"
      }
    },
    {
      "scope": ["invalid"],
      "settings": {
        "foreground": "#FF3C3C",
        "fontStyle": "underline"
      }
    }
  ],

  "uuid": "noite-natalina-minimal-002"
}
