{
  "$schema": "vscode://schemas/color-theme",
  "name": "Natal_Noite_Minimalista",
  "type": "dark",

  "colors": {
    "editor.background": "#0A0A0A",
    "editor.foreground": "#DDDDDD",

    "editorCursor.foreground": "#CBBF8A", 
    "editor.selectionBackground": "#1B271F",
    "editor.inactiveSelectionBackground": "#121A14",
    "editorLineNumber.foreground": "#2E2E2E",
    "editorLineNumber.activeForeground": "#AFAFAF",

    "editorWhitespace.foreground": "#1A1A1A",

    "activityBar.background": "#0C0C0C",
    "activityBar.foreground": "#CFCFCF",
    "activityBarBadge.background": "#233B2A",
    "activityBarBadge.foreground": "#FFFFFF",

    "sideBar.background": "#0C0C0C",
    "sideBar.foreground": "#CFCFCF",

    "statusBar.background": "#0B0B0B",
    "statusBar.foreground": "#CBBF8A",

    "tab.activeBackground": "#101010",
    "tab.activeForeground": "#EDEDED",
    "tab.inactiveBackground": "#080808",
    "tab.inactiveForeground": "#898989",
    "tab.border": "#00000000",
    "tab.activeBorder": "#233B2A",

    "terminal.background": "#0A0A0A",
    "terminal.foreground": "#DDDDDD",
    "terminalCursor.foreground": "#CBBF8A",

    "terminal.ansiBlack": "#0A0A0A",
    "terminal.ansiRed": "#A05F5F",     
    "terminal.ansiGreen": "#577A5E",   
    "terminal.ansiYellow": "#A89D78",
    "terminal.ansiBlue": "#4A5F78",
    "terminal.ansiMagenta": "#7B5E78",
    "terminal.ansiCyan": "#5F7777",
    "terminal.ansiWhite": "#E0E0E0",

    "button.background": "#233B2A",
    "button.foreground": "#FFFFFF",
    "button.hoverBackground": "#2D4A35"
  },

  "semanticHighlighting": true,

  "tokenColors": [
    { "scope": "comment", "settings": { "foreground": "#555555", "fontStyle": "italic" } },

    { "scope": "keyword", "settings": { "foreground": "#CBBF8A" } },
    { "scope": "string", "settings": { "foreground": "#C8C8C8" } },
    { "scope": "number", "settings": { "foreground": "#CBBF8A" } },

    { "scope": "variable", "settings": { "foreground": "#DDDDDD" } },
    { "scope": "constant", "settings": { "foreground": "#CBBF8A" } },

    { "scope": "function", "settings": { "foreground": "#D9D9D9" } },
    { "scope": "type", "settings": { "foreground": "#AFAFAF" } },
    { "scope": "operator", "settings": { "foreground": "#CBBF8A" } },

    { "scope": "punctuation", "settings": { "foreground": "#A0A0A0" } }
  ]
}
