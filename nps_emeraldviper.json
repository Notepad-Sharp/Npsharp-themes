{
  "$schema": "vscode://schemas/color-theme",
  "name": "Emerald Viper",
  "type": "dark",
  "colors": {
    "editor.background": "#0A0F0A",
    "editor.foreground": "#D9FEE0",
    "editorCursor.foreground": "#39FF88",
    "editorLineNumber.foreground": "#2E3F2E",
    "editorLineNumber.activeForeground": "#5CFF9C",
    "editor.selectionBackground": "#0F2B19",
    "editorWhitespace.foreground": "#1C261C",
    "sideBar.background": "#0C120C",
    "sideBar.foreground": "#C8F5D1",
    "sideBarSectionHeader.background": "#0F150F",
    "activityBar.background": "#0F150F",
    "activityBar.foreground": "#4CFF94",
    "statusBar.background": "#0F150F",
    "statusBar.foreground": "#E3FFE9",
    "tab.activeBackground": "#111A11",
    "tab.inactiveBackground": "#0C120C",
    "tab.activeForeground": "#4CFF94",
    "tab.inactiveForeground": "#5A6F5A"
  },
  "tokenColors": [
    { "scope": "comment", "settings": { "foreground": "#4B6B4B", "fontStyle": "italic" } },
    { "scope": "keyword", "settings": { "foreground": "#22FF66", "fontStyle": "bold" } },
    { "scope": "string", "settings": { "foreground": "#7CFFB5" } },
    { "scope": "number", "settings": { "foreground": "#39FF88" } },
    { "scope": "constant", "settings": { "foreground": "#6AFFC7" } },
    { "scope": "variable", "settings": { "foreground": "#D9FEE0" } },
    { "scope": "function", "settings": { "foreground": "#3DFF7C" } },
    { "scope": "type", "settings": { "foreground": "#2DFF6E" } },
    { "scope": "class", "settings": { "foreground": "#5CFF9C" } },
    { "scope": "operator", "settings": { "foreground": "#39FF88" } },
    { "scope": "punctuation", "settings": { "foreground": "#9EC9A4" } }
  ]
}
