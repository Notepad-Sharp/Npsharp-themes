{
  "$schema": "vscode://schemas/color-theme",
  "name": "luxo",
  "type": "dark",

  "colors": {
    "editor.background": "#0A0D0D",
    "editor.foreground": "#E6FFFF",

    "editorCursor.foreground": "#38E6C4",
    "editor.selectionBackground": "#113C38",
    "editor.inactiveSelectionBackground": "#0C2A27",

    "editorLineNumber.foreground": "#2F3F3F",
    "editorLineNumber.activeForeground": "#38E6C4",

    "editorWhitespace.foreground": "#162423",

    "activityBar.background": "#0B0F0F",
    "activityBar.foreground": "#E6FFFF",
    "activityBarBadge.background": "#2ABFA5",
    "activityBarBadge.foreground": "#000000",

    "sideBar.background": "#0B0F0F",
    "sideBar.foreground": "#D9FFFF",

    "statusBar.background": "#0B0F0F",
    "statusBar.foreground": "#38E6C4",

    "tab.activeBackground": "#0F1414",
    "tab.activeForeground": "#EFFFFF",
    "tab.inactiveBackground": "#080C0C",
    "tab.inactiveForeground": "#8FB5B5",
    "tab.border": "#00000000",
    "tab.activeBorder": "#2ABFA5",

    "terminal.background": "#0A0D0D",
    "terminal.foreground": "#E6FFFF",
    "terminalCursor.foreground": "#38E6C4",

    "terminal.ansiBlack": "#0B0F0F",
    "terminal.ansiRed": "#C75959",
    "terminal.ansiGreen": "#2ABFA5",
    "terminal.ansiYellow": "#DAF7D0",
    "terminal.ansiBlue": "#64D7C7",
    "terminal.ansiMagenta": "#4CC6B6",
    "terminal.ansiCyan": "#38E6C4",
    "terminal.ansiWhite": "#FFFFFF",

    "button.background": "#2ABFA5",
    "button.foreground": "#000000",
    "button.hoverBackground": "#38E6C4"
  },

  "semanticHighlighting": true,

  "tokenColors": [
    { "scope": "comment", "settings": { "foreground": "#7BA8A8", "fontStyle": "italic" } },

    { "scope": "keyword", "settings": { "foreground": "#38E6C4" } },
    { "scope": "string", "settings": { "foreground": "#C6FFFF" } },
    { "scope": "number", "settings": { "foreground": "#38E6C4" } },

    { "scope": "variable", "settings": { "foreground": "#2ABFA5" } },
    { "scope": "constant", "settings": { "foreground": "#38E6C4" } },

    { "scope": "function", "settings": { "foreground": "#E6FFFF" } },
    { "scope": "type", "settings": { "foreground": "#2ABFA5" } },
    { "scope": "operator", "settings": { "foreground": "#38E6C4" } },

    { "scope": "punctuation", "settings": { "foreground": "#A6D4D4" } }
  ]
}
